@model IEnumerable<NexxtDent.Models.WorkCategory>

@{
    ViewBag.Title = @Resources.Resource.WorkCategory_ViewIndex_Titulo1;
}

    <h2>@Resources.Resource.WorkCategory_ViewIndex_Titulo1</h2>

<p>
    @Html.ActionLink(@Resources.Resource.ButtonNew, "Create", new { }, new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Detalle)
        </td>
        <td>
            @Html.ActionLink(@Resources.Resource.ViewEdit, "Edit", new { id=item.WorkCategoryId }, new { @class="btn btn-warning"}) |
            @Html.ActionLink(@Resources.Resource.ViewDetail, "Details", new { id=item.WorkCategoryId }, new { @class="btn btn-info"}) |
            @Html.ActionLink(@Resources.Resource.ViewDelete, "Delete", new { id=item.WorkCategoryId }, new { @class="btn btn-danger"})
        </td>
    </tr>
}

</table>

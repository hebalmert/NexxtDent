@model IEnumerable<NexxtDent.Models.Service>

@{
    ViewBag.Title = @Resources.Resource.Service_ViewIndex_Titulo1;
}

    <h2>@Resources.Resource.Service_ViewIndex_Titulo1</h2>

<p>
    @Html.ActionLink(@Resources.Resource.ButtonNew, "Create", new { }, new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Servicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tax.Impuesto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio3)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Servicio)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Tax.Impuesto)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Precio1)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Precio2)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Precio3)
    </td>
    <td>
        @Html.ActionLink(@Resources.Resource.ButtonEdit, "Edit", new { id = item.ServiceId }, new { @class="btn btn-warning"}) |
        @Html.ActionLink(@Resources.Resource.ButtonDetail, "Details", new { id = item.ServiceId }, new { @class="btn btn-info"}) |
        @Html.ActionLink(@Resources.Resource.ButtonDelete, "Delete", new { id = item.ServiceId }, new { @class="btn btn-danger"})
    </td>
</tr>
}

</table>

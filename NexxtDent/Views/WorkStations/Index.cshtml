@model IEnumerable<NexxtDent.Models.WorkStation>

@{
    ViewBag.Title = @Resources.Resource.WorkStation_ViewIndex_Titulo1;
}

    <h2>@Resources.Resource.WorkStation_ViewIndex_Titulo1</h2>

<p>
    @Html.ActionLink(@Resources.Resource.ButtonNew, "Create", new { }, new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Estacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Estacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Detalle)
        </td>
        <td>
            @Html.ActionLink(@Resources.Resource.ButtonEdit, "Edit", new { id=item.WorkStationId }, new { @class="btn btn-warning"}) |
            @Html.ActionLink(@Resources.Resource.ButtonDetail, "Details", new { id=item.WorkStationId }, new { @class="btn btn-info"}) |
            @Html.ActionLink(@Resources.Resource.ButtonDelete, "Delete", new { id=item.WorkStationId }, new { @class="btn btn-danger"})
        </td>
    </tr>
}

</table>

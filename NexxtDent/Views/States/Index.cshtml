@model IEnumerable<NexxtDent.Models.State>

@{
    ViewBag.Title = Resources.Resource.State_ViewIndex_Titulo;
}

    <h2>@Resources.Resource.State_ViewIndex_Titulo</h2>

<p>
    @Html.ActionLink(@Resources.Resource.ButtonNew, "Create", new { }, new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink(@Resources.Resource.ButtonEdit, "Edit", new { id=item.StateId }, new { @class="btn btn-warning"}) |
            @Html.ActionLink(@Resources.Resource.ButtonDetail, "Details", new { id=item.StateId }, new { @class="btn btn-info"}) |
            @Html.ActionLink(@Resources.Resource.ButtonDelete, "Delete", new { id=item.StateId }, new { @class="btn btn-danger"})
        </td>
    </tr>
}

</table>
